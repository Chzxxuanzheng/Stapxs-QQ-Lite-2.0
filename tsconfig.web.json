{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",

    // milky-types
    "src/renderer/milky-types/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@milky/types/*": [
        "src/renderer/milky-types/src/*"
      ],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
